
<%= render 'shared/page_title', title:  "All Chefs" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li class="active">
    <%=link_to "Chefs", chefs_path %>
  </li>
</ul>

<!--paginatingg the page to display 3 chefs in each page-->
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<!--here we are intrating or looping through all the chefs we have and displaying all the chefs -->

<% @chefs.each do |chef| %>
   <div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>  <!--add link to the gravatar image to take 
    us to chef show page-->
    <p><h5>Chef name: <%= chef.chefname %></h5></p>
  </div>
</div>

<% end %>