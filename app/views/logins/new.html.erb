 
 <!--because this is not a model back form we cant use form_for but here we will use form_tag-->
 <!--then specify the path it is going to, here it is going to the login page-->

<%= render 'shared/page_title', title: 'Log in' %>  
  
  
  <div class="row">
    <div class="well col-md-6 col-md-offset-3">
       <%= form_tag '/login ' do %> 
    
         <%= label_tag :email %>
         <%= text_field_tag :email %>
         
         <%= label_tag :password %>
         <%= password_field_tag :password %>
         
         <%= submit_tag 'login', class: 'btn btn-success' %>
  
   <% end %>
  </div>
</div>

